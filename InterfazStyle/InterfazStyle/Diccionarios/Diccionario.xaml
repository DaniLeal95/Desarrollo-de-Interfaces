<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InterfazStyle.Diccionarios">


    <Style TargetType="Image" x:Key="Image">
        <Setter Property="MaxHeight" Value="100"></Setter>
        <Setter Property="MaxWidth" Value="100"></Setter>
        <Setter Property="Margin" Value="20"></Setter>
        <Setter Property="RelativePanel.AlignHorizontalCenterWithPanel" Value="True"></Setter>
    </Style>

    <Style TargetType="TextBox" x:Key="textPrincipal">
        <Setter Property="RelativePanel.AlignHorizontalCenterWithPanel" Value="True"></Setter>
        <Setter Property="Margin" Value="20"></Setter>
        <Setter Property="MinWidth" Value="250"></Setter>
        <Setter Property="TextAlignment" Value="Justify"></Setter>
        
    </Style>
</ResourceDictionary>
